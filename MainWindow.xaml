<Window x:Class="GunsNRoses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GunsNRoses"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <Grid>
        <DockPanel>
            <Label Content="Songs:" FontSize="24"
               DockPanel.Dock="Top"/>
            <Frame Source="Pages/SongsPage.xaml" 
                NavigationUIVisibility="Hidden"
               x:Name="MainFrame" Height="300px" Width="270"
                />
            <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom"
                    Height="300px" Margin="15 15 15 15" Width="100">
                <Button Content="Add song" x:Name="AddSong_Button" 
                     Margin="0 0 0 15"/>
                <Button Content="Remove song"></Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>

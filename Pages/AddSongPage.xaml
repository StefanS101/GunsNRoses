<Page x:Class="GunsNRoses.Pages.AddSongPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GunsNRoses.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="153" d:DesignWidth="480"
      Title="AddSongPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Add Guns 'N' Roses song" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        <Label Content="Song name:" Grid.Row="1" />
        <TextBox Margin=" 3 3 3 3px" Text="" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Album cover:" Grid.Row="2" />
        <TextBox Margin="3 3 3 3" Text="" Grid.Column="1" Grid.Row="2"/>
        <Button Width="150px"  Margin="3 3 3 3" Content="Add" Grid.ColumnSpan="2" Grid.Row="3"/>


    </Grid>
</Page>
